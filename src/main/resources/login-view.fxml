<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="PogChat">
        <font>
            <Font name="Cambria" size="36.0" />
        </font>
    </Label>
    <TextField fx:id="loginField" promptText="username" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <PasswordField fx:id="passwordField" promptText="password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <Label fx:id="wrongPassword" textFill="#eb0000">
      <font>
         <Font name="System Bold" size="14.0" />
      </font>
   </Label>
    <Button fx:id="loginButton" onAction="#onButtonClick" text="Log In!" />
   <Label fx:id="changeLoginTypeLabel" text="If you don't have account yet, register it here:">
      <font>
         <Font name="Calibri Italic" size="14.0" />
      </font>
   </Label>
   <Button fx:id="switchRegisterButton" mnemonicParsing="false" text="Switch to register" onAction="#onSwitchButtonClick" />
</VBox>
